/** 
 * Multiplexor. If sel == 1 then out = b else out = a.
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Ben's first hairy mux :-)
    Not(in=sel, out=out1);    
    And(a=a, b=out1, out=out2);
    And(a=b, b=sel, out=out3);
    Or(a=out2, b=out3, out=out);
}
